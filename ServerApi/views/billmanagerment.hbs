<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link
      href="https://unpkg.com/boxicons@2.0.9/css/boxicons.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="./stylesheets/style.css" />
    <link rel="icon" href="./img/favicon/favicon.ico" type="img/favicon" />

  </head>
  <body>
    <section id="sidebar">
      <a href="/dashbroad" class="brand">
        <i class="bx bxs-smile"></i>
        <span class="text">FHotel</span>
      </a>
      <ul class="side-menu top">
        <li>
          <a href="/dashbroad" class="menu-link">
            <i class="bx bxs-dashboard"></i>
            <span class="text">Dashboard</span>
          </a>
        </li>
        <li>
          <a href="/usermanagerment">
            <i class="bx bxs-group"></i>
            <span class="text">Quản lí User</span>
          </a>
        </li>
        <li>
          <a href="/roommanagerment" class="menu-link">
            <i class="bx bxs-door-open"></i>
            <span class="text">Quản Lí Room</span>
          </a>
        </li>
        <li>
          <a href="/bookingmanagerment" class="menu-link">
            <i class="bx bxs-door-open"></i>
            <span class="text">Quản Lí Booking</span>
          </a>
        </li>
        <li>
          <a href="/servicemanagerment" class="menu-link">
            <i class="bx bxs-door-open"></i>
            <span class="text">Quản Lí Service</span>
          </a>
        </li>
        <li class="active">
          <a href="/billmanagerment" class="menu-link">
            <i class="bx bxs-door-open"></i>
            <span class="text">Quản Lí Hóa Đơn</span>
          </a>
        </li>
        <li>
          <a href="/thongke" class="menu-link">
            <i class="bx bxs-door-open"></i>
            <span class="text">Thống Kê</span>
          </a>
        </li>
      </ul>
      <ul class="side-menu">

        <li>
          <a href="/logout" class="logout" onclick="logout()">
            <i class="bx bxs-log-out-circle"></i>
            <span class="text">Logout</span>
          </a>
        </li>
      </ul>
    </section>
    <section id="content">
      <nav>
        <i class="bx bx-menu"></i>
        <a href="#" class="nav-link">User</a>
        <form action="#">
          <div class="form-input">
            <input type="search" placeholder="Search..." />
            <button type="submit" class="search-btn"><i
                class="bx bx-search"
              ></i></button>
          </div>
        </form>
        <input type="checkbox" id="switch-mode" hidden />
        <label for="switch-mode" class="switch-mode"></label>
        <a href="#" class="notification">
          <i class="bx bxs-bell"></i>
          <span class="num">8</span>
        </a>
        <a href="#" class="profile">
          <img src="img/avatar.png" />
        </a>
      </nav>
      <main>
        <div class="head-title">
          <div class="left">
            <h1>Quản Lí User</h1>
          </div>

        </div>
        <div class="table-data">
          <div class="order">
            <div class="head">
              <h3>Quản lý User</h3>
              <i id="addUserBtn" class="bx bx-plus btn-add"></i>
              <i class="bx bx-filter"></i>

            </div>
            <table>
              <thead>
                <tr>
                  <th>ID Hóa Đơn</th>
                  <th>Tên User</th>
                  <th>Tên Phòng</th>
                  <th>Ngày Bắt Đầu</th>
                  <th>Ngày Kết Thúc</th>
                  <th>Tổng Tiền</th>
                  <th>Trạng Thái Thanh Toán</th>
                  <th>Trạng Thái</th>
                </tr>
              </thead>
              <tbody  id="bills-table">
                
              </tbody>
            </table>
          </div>
        </div>

        <!-- Modal Form -->
        <!-- Modal Form -->
        <div id="userFormModal" class="modal" style="display: none;">
          <div class="modal-content">
            <span class="close" onclick="closeModal()">&times;</span>
            <form id="userForm">
              <h2>Quản Lý User</h2>
              <div>
                <label for="username">username</label>
                <input type="text" id="username" required />
              </div>
              <div>
                <label for="password">Password</label>
                <input type="text" id="password" required />
              </div>
              <div>
                <label for="name">Name</label>
                <input type="text" id="name" required />
              </div>
              <div>
                <label for="email">Email</label>
                <input type="email" id="email" required />
              </div>
              <div>
                <label for="phonenumber">Phone</label>
                <input type="text" id="phonenumber" required />
              </div>
              <div>
                <label for="gender">Gender</label>
                <select id="gender" required>
                  <option value="Nam">Nam</option>
                  <option value="Nữ">Nữ</option>
                </select>
              </div>

              <div>
                <label for="birthday">Birthday</label>
                <input type="date" id="birthday" required />
              </div>
              <div>
                <label for="address">Address</label>
                <input type="text" id="address" required />
              </div>
              <div>
                <label for="avatar">Avatar</label>
                <input type="text" id="avatar" required />
              </div>
              <button type="submit">Submit</button>
            </form>
          </div>
        </div>
      </main>
    </section>
    <script src="./javascripts/bill_manager.js"></script>
    <script src="./javascripts/script.js"></script>
  </body>
</html>