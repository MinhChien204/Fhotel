<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Document</title>
  <link href="https://unpkg.com/boxicons@2.0.9/css/boxicons.min.css" rel="stylesheet" />
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
  <link rel="stylesheet" href="./stylesheets/style.css" />
  <link rel="icon" href="./img/favicon/favicon.ico" type="img/favicon" />

</head>

<body>
  <section id="sidebar">
    <a href="/dashbroad" class="brand">
      <i class="bx bxs-smile"></i>
      <span class="text">FHotel</span>
    </a>
    <ul class="side-menu top">
      <li>
        <a href="/dashbroad" class="menu-link">
          <i class="bx bxs-dashboard"></i>
          <span class="text">Dashboard</span>
        </a>
      </li>
      <li>
        <a href="/usermanagerment">
          <i class="bx bxs-group"></i>
          <span class="text">Quản lí User</span>
        </a>
      </li>
      <li class="active">
        <a href="/roommanagerment" class="menu-link">
          <i class="bx bxs-door-open"></i>
          <span class="text">Quản Lí Room</span>
        </a>
      </li>
      <li>
        <a href="/bookingmanagerment" class="menu-link">
          <i class="bx bxs-door-open"></i>
          <span class="text">Quản Lí Booking</span>
        </a>
      </li>
      <li>
        <a href="/servicemanagerment" class="menu-link">
          <i class="bx bxs-door-open"></i>
          <span class="text">Quản Lí Service</span>
        </a>
      </li>
      <li>
        <a href="/billmanagerment" class="menu-link">
          <i class="bx bxs-door-open"></i>
          <span class="text">Quản Lí Hóa Đơn</span>
        </a>
      </li>
      <li>
        <a href="/thongke" class="menu-link">
          <i class="bx bxs-door-open"></i>
          <span class="text">Thống Kê</span>
        </a>
      </li>
    </ul>
    <ul class="side-menu">
      <li>
        <a href="/logout" class="logout" onclick="logout()">
          <i class="bx bxs-log-out-circle"></i>
          <span class="text">Logout</span>
        </a>
      </li>
    </ul>
  </section>
  <section id="content">
    <nav>
      <i class="bx bx-menu"></i>
      <a href="#" class="nav-link">Room</a>
      <form action="#">
        <div class="form-input">
          <input type="search" placeholder="Search..." />
          <button type="submit" class="search-btn"><i class="bx bx-search"></i></button>
        </div>
      </form>
      <input type="checkbox" id="switch-mode" hidden />
      <label for="switch-mode" class="switch-mode"></label>
      <a href="#" class="notification">
        <i class="bx bxs-bell"></i>
        <span class="num">8</span>
      </a>
      <a href="#" class="profile">
        <img src="img/avatar.png" />
      </a>
    </nav>
    <main>
      <div class="head-title">
        <div class="left">
          <h1>Quản Lí Room</h1>
        </div>
      </div>
      <div class="table-data">
        <div class="order">
          <div class="head">
            <h3>Danh sách phòng</h3>
            <i id="addRoomBtn" class="bx bx-plus btn-add"></i>
             <i class="bx bx-filter"></i>
          </div>
          <table>
            <thead>
              <tr>
                <th>STT</th>
                <th>Image</th>
                <th>Name</th>
                <th>Price</th>
                <th>Rating</th>
                <th>Room code</th>
                <th>Description</th>
                <th>Capacity</th>
                <th>Status</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody id="roomTableBody">

            </tbody>
          </table>
        </div>
      </div>
      <!-- Modal Thêm/Sửa Phòng -->
    </main>
  </section>

  <div id="roomFormModal" class="modal" style="display: none;">
    <div class="modal-content">
      <span class="close" onclick="closeModal()">&times;</span>
      <form id="roomForm">
        <h2>Quản Lý Phòng</h2>
        <div>
          <label for="roomName">Name</label>
          <input type="text" id="roomName" required />
        </div>
        <div>
          <label for="roomPrice">Price</label>
          <input type="number" id="roomPrice" required />
        </div>
        <div>
          <label for="roomRating">Rating</label>
          <input type="number" step="0.1" id="roomRating" required />
        </div>
        <div>
          <label for="roomCapacity">Capacity</label>
          <input type="number" id="roomCapacity" required />
        </div>
        <div>
          <label for="roomStatus">Status</label>
          <select id="roomStatus" required>
            <option value="available">Available</option>
            <option value="unavailable">Unavailable</option>
          </select>
        </div>
        <div>
          <label for="roomServices">Services</label>
          <div id="roomServices" name="services[]" required>
            <!-- Các checkbox sẽ được tạo động tại đây -->
          </div>
        </div>
        <div>
          <label for="roomCode">Room code</label>
          <input type="text" id="roomCode" required />
        </div>
        <div>
          <label for="roomDescription">Description</label>
          <textarea id="roomDescription"></textarea>
        </div>
        <div>
          <button type="button" class="btn-icon"><i class="bi bi-image"></i></button>
        </div>
        <div class="image-preview-container" style="display: flex; flex-wrap: wrap; margin-top: 10px;"></div>
        <input type="hidden" id="roomId" />
        <button type="submit">Submit</button>
      </form>
    </div>
  </div>


  <script src="./javascripts/room_manager.js"></script>
  <script src="./javascripts/script.js"></script>
</body>

</html>