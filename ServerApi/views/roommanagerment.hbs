      </ul>
    </section>
    <section id="content">
      <nav>
        <i class="bx bx-menu"></i>
        <a href="#" class="nav-link">Categories</a>
        <form action="#">
          <div class="form-input">
            <input type="search" placeholder="Search..." />
            <button type="submit" class="search-btn"><i
                class="bx bx-search"
              ></i></button>
          </div>
        </form>
        <input type="checkbox" id="switch-mode" hidden />
        <label for="switch-mode" class="switch-mode"></label>
        <a href="#" class="notification">
          <i class="bx bxs-bell"></i>
          <span class="num">8</span>
        </a>
        <a href="#" class="profile">
          <img src="img/avatar.png" />
        </a>
      </nav>
      <main>
        <div class="head-title">
          <div class="left">
            <h1>Quản Lí Room</h1>
          </div>
           <a href="#" class="btn-danger">
            <i class="bx bxs-cloud-download"></i>
            <span class="text">Xuất Excel</span>
          </a>
          <a href="#" class="btn-download">
            <i class="bx bxs-cloud-download"></i>
            <span class="text">Xuất PDF</span>
          </a>
        </div>

        <ul class="box-info">
          <li>
            <i class="bx bxs-calendar-check"></i>
            <span class="text">
              <h3>1020</h3>
              <p>New Order</p>
            </span>
          </li>
          <li>
            <i class="bx bxs-calendar-check"></i>
            <span class="text">
              <h3>1020</h3>
              <p>New Order</p>
            </span>
          </li>
          <li>
            <i class="bx bxs-group"></i>
            <span class="text">
              <h3>2834</h3>
              <p>Visitors</p>
            </span>
          </li>
          <li>
            <i class="bx bxs-dollar-circle"></i>
            <span class="text">
              <h3>$2543</h3>
              <p>Total Sales</p>
            </span>
          </li>
        </ul>
    <div class="table-data">
        <div class="order">
          <div class="head">
            <h3>Danh sách phòng</h3>
            <i id="addRoomBtn" class="bx bx-plus btn-add"></i>
          </div>
          <table>
            <thead>
              <tr>
                <th>STT</th>
                <th>Image</th>
                <th>Name</th>
                <th>Price</th>
                <th>Rating</th>
                <th>Description</th>
                <th>Capacity</th>
                <th>Status</th>
                <th>Actions</th>
              </tr>
            </thead>
           <tbody id="roomTableBody">

           </tbody>
          </table>
        </div>
      </div>
        <!-- Modal Thêm/Sửa Phòng -->
      </main>
    </section>

     <div class="modal" id="roomModal">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Thêm/Sửa Phòng</h5>
          <button type="button" class="close-modal-btn">&times;</button>
        </div>
        <div class="modal-body">
          <form id="roomForm">
            <label for="roomName">Tên Phòng</label>
            <input type="text" id="roomName" class="form-control" placeholder="Nhập tên phòng" />
            <label for="roomPrice">Giá</label>
            <input type="number" id="roomPrice" class="form-control" placeholder="Nhập giá phòng" />
            <label for="roomRating">Đánh giá</label>
            <input type="number" id="roomRating" class="form-control" placeholder="Đánh giá" />
            <label for="roomDescription">Mô tả</label>
            <textarea id="roomDescription" class="form-control"></textarea>
          </form>
        </div>
        <div class="modal-footer">
          <button type="button" class="close-modal-btn">Đóng</button>
          <button type="button" id="saveRoomBtn">Lưu</button>
        </div>
      </div>
    </div>
  </div>

    <script src="./javascripts/room_manager.js"></script>
    <script src="./javascripts/script.js"></script>
  </body>
</html>