<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Quản lý Service</title>
  <link href="https://unpkg.com/boxicons@2.0.9/css/boxicons.min.css" rel="stylesheet" />
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

  <link rel="stylesheet" href="./stylesheets/style.css" />
  <link rel="icon" href="./img/favicon/favicon.ico" type="img/favicon" />

</head>

<body>
  <section id="sidebar">
    <a href="/dashbroad" class="brand">
      <i class="bx bxs-smile"></i>
      <span class="text">FHotel</span>
    </a>
    <ul class="side-menu top">
      <li>
        <a href="/dashbroad" class="menu-link">
          <i class="bx bxs-dashboard"></i>
          <span class="text">Dashboard</span>
        </a>
      </li>
      <li>
        <a href="/usermanagerment" class="menu-link">
          <i class="bx bxs-group"></i>
          <span class="text">Quản lí User</span>
        </a>
      </li>
      <li>
        <a href="/roommanagerment" class="menu-link">
          <i class="bx bxs-door-open"></i>
          <span class="text">Quản Lí Room</span>
        </a>
      </li>
      <li>
        <a href="/bookingmanagerment">
          <i class="bx bxs-door-open"></i>
          <span class="text">Quản Lí Booking</span>
        </a>
      </li>
      <li class="active">
        <a href="/servicemanagerment">
          <i class="bx bxs-door-open"></i>
          <span class="text">Quản Lí Service</span>
        </a>
      </li>
      <li>
        <a href="/notificationmanagerment" class="menu-link">
          <i class="bx bxs-door-open"></i>
          <span class="text">Quản Lí Notification</span>
        </a>
      </li>
      <li>
        <a href="/ratingmanagerment" class="menu-link">
          <i class="bx bxs-door-open"></i>
          <span class="text">Quản Lí Đánh Giá</span>
        </a>
      </li>
      <li>
        <a href="/thongke" class="menu-link">
          <i class="bx bxs-door-open"></i>
          <span class="text">Thống Kê</span>
        </a>
      </li>
    </ul>
    <ul class="side-menu">
      <li>
        <a href="/setting">
          <i class="bx bxs-cog"></i>
          <span class="text">Settings</span>
        </a>
      </li>
      <li>
        <a href="/logout" class="logout" onclick="logout()">
          <i class="bx bxs-log-out-circle"></i>
          <span class="text">Logout</span>
        </a>
      </li>
    </ul>
  </section>
  <section id="content">
    <nav>
      <i class="bx bx-menu"></i>
      <a href="/servicemanagerment" class="nav-link">Quản Lí Service</a>
      <form action="#">
        <div class="form-input">
          <input type="search" placeholder="Search..." />
          <button type="submit" class="search-btn"><i class="bx bx-search"></i></button>
        </div>
      </form>
      <input type="checkbox" id="switch-mode" hidden />
      <label for="switch-mode" class="switch-mode"></label>
      <a href="#" class="notification">
        <i class="bx bxs-bell"></i>
        <span class="num">8</span>
      </a>
      <a href="#" class="profile">
        <img src="img/avatar.png" />
      </a>
    </nav>
    <main>

      <div class="table-data">
        <div class="order">
          <div class="head">
            <h3>Danh sách Service</h3>
            <i id="addServiceBtn" class="bx bx-plus btn-add"></i>
          </div>
          <table>
            <thead>
              <tr>
                <th>STT</th>
                <th>Image</th>
                <th>Name</th>
                <th>Price</th>
                <th>Description</th>
              </tr>
            </thead>
            <tbody id="serviceTableBody"></tbody>
          </table>
        </div>
      </div>

      <!-- Modal Form -->
      <div id="serviceFormModal" class="modal" style="display: none;">
        <div class="modal-content">
          <span class="close" onclick="closeModal()">&times;</span>
          <form id="serviceForm">
            <h2>Quản Lý dịch vụ</h2>
            <div>
              <label for="name">Name</label>
              <input type="text" id="name" required />
            </div>
            <div>
              <label for="price">Price</label>
              <input type="number" id="price" required />
            </div>
            <div>
              <label for="description">Description</label>
              <textarea id="description"></textarea>
            </div>
            <div>
              <button type="button" class="btn-icon"><i class="bi bi-image"></i></button>
            </div>
            <div class="image-preview-container" style="display: flex; flex-wrap: wrap; margin-top: 10px;"></div>
            <input type="hidden" id="serviceId" />
            <button type="submit">Submit</button>
          </form>
        </div>
      </div>

    </main>
  </section>

  <script src="./javascripts/service_manager.js"></script>
  <script src="./javascripts/script.js"></script>
</body>

</html>