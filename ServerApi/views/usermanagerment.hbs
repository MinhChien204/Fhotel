    <section id="content">
      <nav>
        <i class="bx bx-menu"></i>
        <a href="#" class="nav-link">User</a>
        <form action="#">
          <div class="form-input">
            <input type="search" placeholder="Search..." />
            <button type="submit" class="search-btn"><i
                class="bx bx-search"
              ></i></button>
          </div>
        </form>
        <input type="checkbox" id="switch-mode" hidden />
        <label for="switch-mode" class="switch-mode"></label>
        <a href="#" class="notification">
          <i class="bx bxs-bell"></i>
          <span class="num">8</span>
        </a>
        <a href="#" class="profile">
          <img src="img/avatar.png" />
        </a>
      </nav>
      <main>
        <div class="head-title">
          <div class="left">
            <h1>Quản Lí User</h1>
          </div>
           <a href="#" class="btn-danger">
            <i class="bx bxs-cloud-download"></i>
            <span class="text">Xuất Excel</span>
          </a>
          <a href="#" class="btn-download">
            <i class="bx bxs-cloud-download"></i>
            <span class="text">Xuất PDF</span>
          </a>
        </div>
        <div class="table-data">
          <div class="order">
            <div class="head">
              <h3>Quản lý User</h3>
              <i id="addUserBtn" class="bx bx-plus btn-add"></i>
              <i class="bx bx-search"></i>
              <i class="bx bx-filter"></i>
              
            </div>
            <table>
              <thead>
                <tr>
                  <th>STT</th>
                  <th>Avatar</th>
                  <th>Name</th>
                  <th>Birthday</th>
                  <th>Gender</th>
                  {{!-- <th>Email</th> --}}
                  <th>Phone</th>
                  <th>Address</th>
                  <th>Role</th>
                  <th>Actions</th>
                </tr>
              </thead> 
              <tbody id="userTableBody"></tbody>
            </table>
          </div>
        </div>

        <!-- Modal Form -->
<!-- Modal Form -->
<div id="userFormModal" class="modal" style="display: none;">
  <div class="modal-content">
    <span class="close" onclick="closeModal()">&times;</span>
    <form id="userForm">
      <h2>Quản Lý User</h2>
      <div>
        <label for="username">username</label>
        <input type="text" id="username" required />
      </div>
      <div>
        <label for="password">Password</label>
        <input type="text" id="password" required />
      </div>
      <div>
        <label for="name">Name</label>
        <input type="text" id="name" required />
      </div>
      <div>
        <label for="email">Email</label>
        <input type="email" id="email" required />
      </div>
      <div>
        <label for="phonenumber">Phone</label>
        <input type="text" id="phonenumber" required />
      </div>
      <div>
        <label for="gender">Gender</label>
        <select id="gender" required>
          <option value="Nam">Nam</option>
          <option value="Nữ">Nữ</option>
        </select>
      </div>

      <div>
        <label for="birthday">Birthday</label>
        <input type="date" id="birthday" required />
      </div>
      <div>
        <label for="address">Address</label>
        <input type="text" id="address" required />
      </div>
      <div>
        <label for="avatar">Avatar</label>
        <input type="text" id="avatar" required />
      </div>
      <button type="submit">Submit</button>
    </form>
  </div>
</div>


      </main>
    </section>

    <script src="./javascripts/user_manager.js"></script>
    <script src="./javascripts/script.js"></script>
