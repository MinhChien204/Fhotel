<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Thống kê</title>
    <link href="https://unpkg.com/boxicons@2.0.9/css/boxicons.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="./stylesheets/style.css" />
    <link rel="icon" href="./img/favicon/favicon.ico" type="img/favicon" />
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f9f9fb;
            color: #333;
        }

        .filter {
            margin-bottom: 2rem;
            display: flex;
            align-items: center;
            gap: 1rem;
        }

        .filter input {
            padding: 0.5rem;
            border: 1px solid #ddd;
            border-radius: 5px;
            font-size: 1rem;
        }

        .filter button {
            padding: 0.5rem 1rem;
            font-size: 1rem;
            color: white;
            background-color: #3C91E6;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        .filter button:hover {
            background-color: #316db5;
        }

        .container {
            max-width: 1200px;
            margin: 2rem auto;
            background: white;
            padding: 2rem;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        h2 {
            margin-bottom: 1rem;
            display: inline-block;
            padding-bottom: 0.5rem;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 2rem;
        }

        table th,
        table td {
            text-align: left;
            padding: 1rem;
            border: 1px solid #ddd;
        }

        table th {
            background-color: #3C91E6;
            color: white;
        }

        table tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        table tr:hover {
            background-color: #f1f1f1;
        }

        img {
            max-width: 100px;
            border-radius: 8px;
        }

        .footer {
            text-align: center;
            color: #666;
            padding: 1rem 0;
            font-size: 0.9rem;
        }

        .btn {
            display: inline-block;
            padding: 0.8rem 1.5rem;
            margin: 1rem 0;
            font-size: 1rem;
            color: white;
            background-color: #3C91E6;
            border: none;
            border-radius: 5px;
            text-decoration: none;
            cursor: pointer;
            text-align: center;
        }

        .btn:hover {
            background-color: #3C91E6;
        }

        .total-revenue {
            font-size: 1.5rem;
            color: #333;
            margin-bottom: 2rem;
            text-align: right;
        }
    </style>
</head>

<body>
    <section id="sidebar">
        <a href="/dashbroad" class="brand">
            <i class="bx bxs-smile"></i>
            <span class="text">FHotel</span>
        </a>
        <ul class="side-menu top">
            <li>
                <a href="/dashbroad" class="menu-link">
                    <i class="bx bxs-dashboard"></i>
                    <span class="text">Dashboard</span>
                </a>
            </li>
            <li>
                <a href="/usermanagerment">
                    <i class="bx bxs-group"></i>
                    <span class="text">Quản lí Người Dùng</span>
                </a>
            </li>
            <li>
                <a href="/roommanagerment" class="menu-link">
                     <i class='bx bxs-institution'></i>
                    <span class="text">Quản Lí Phòng</span>
                </a>
            </li>
            <li>
                <a href="/bookingmanagerment">
                    <i class='bx bxs-book-bookmark'></i>
                    <span class="text">Quản Lí Đặt Phòng</span>
                </a>
            </li>
            <li>
                <a href="/servicemanagerment" class="menu-link">
                     <i class='bx bx-cog'></i>
                    <span class="text">Quản Lí Dịch Vụ</span>
                </a>
            </li>
            <li>
                <a href="/billmanagerment" class="menu-link">
                    <i class='bx bxs-spreadsheet' ></i>
                    <span class="text">Quản Lí Hoá Đơn</span>
                </a>
            </li>
            <li class="active">
                <a href="/thongke" class="menu-link">
                     <i class='bx bxs-doughnut-chart'></i>
                    <span class="text">Thống Kê</span>
                </a>
            </li>
        </ul>
        <ul class="side-menu">
            <li>
                <a href="/logout" class="logout" onclick="logout()">
                    <i class="bx bxs-log-out-circle"></i>
                    <span class="text">Logout</span>
                </a>
            </li>
        </ul>
    </section>
    <section id="content">
        <nav>
            <i class="bx bx-menu"></i>
            <a href="#" class="nav-link">Thống kê</a>
            <form action="#">
                <div class="form-input">
                    <input type="search" placeholder="Search..." />
                    <button type="submit" class="search-btn"><i class="bx bx-search"></i></button>
                </div>
            </form>
            <input type="checkbox" id="switch-mode" hidden />
            <label for="switch-mode" class="switch-mode"></label>
            <a href="#" class="notification">
                <i class="bx bxs-bell"></i>
                <span class="num">8</span>
            </a>
            <a href="#" class="profile">
                <img src="img/avatar.png" />
            </a>
        </nav>
        <main>
            <div class="filter">
                <label for="start-date">Từ ngày:</label>
                <input type="date" id="start-date" />

                <label for="end-date">Đến ngày:</label>
                <input type="date" id="end-date" />

                <button id="filter-btn">Xem doanh thu</button>
            </div>

            <div class="container">
                <!-- Thống kê tổng doanh thu khách sạn -->
                <div class="total-revenue" id="total-revenue">
                    Tổng doanh thu khách sạn: <span>Đang tải...</span>
                </div>
                <!-- Thống kê doanh thu -->
                <h2>Tổng doanh thu theo phòng</h2>
                <table>
                    <thead>
                        <tr>
                            <th>Phòng</th>
                            <th>Doanh thu (VNĐ)</th>
                        </tr>
                    </thead>
                    <tbody id="revenue-stats">
                        <!-- Dữ liệu sẽ được thêm động bằng JavaScript -->
                    </tbody>
                </table>

                <!-- Thống kê số lượng đặt phòng theo trạng thái -->
                <h2>Số lượng đặt phòng theo trạng thái</h2>
                <table>
                    <thead>
                        <tr>
                            <th>Trạng thái</th>
                            <th>Số lượng</th>
                        </tr>
                    </thead>
                    <tbody id="status-stats">
                        <!-- Dữ liệu sẽ được thêm động bằng JavaScript -->
                    </tbody>
                </table>


                <!-- Phòng phổ biến nhất -->
                <h2>Phòng phổ biến nhất</h2>
                <table>
                    <thead>
                        <tr>
                            <th>Tên phòng</th>
                            <th>Số lần đặt</th>
                            <th>Hình ảnh</th>
                        </tr>
                    </thead>
                    <tbody id="popular-rooms">
                        <!-- Dữ liệu sẽ được thêm động bằng JavaScript -->
                    </tbody>
                </table>

                <a href="/thongke" class="btn">Tải thêm dữ liệu</a>
            </div>

            <div class="footer">
                &copy; 2024 Hệ thống quản lý khách sạn FHotel. All rights reserved.
            </div>


            <!-- Modal Thêm/Sửa Phòng -->
        </main>
    </section>



    <script src="./javascripts/thongke.js"></script>
    <script src="./javascripts/script.js"></script>
</body>

</html>