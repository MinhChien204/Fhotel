<!-- res/drawable/card_background.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <solid android:color="@android:color/white" />

    <!-- Bo tròn các góc -->
    <corners android:radius="12dp" />

    <!-- Đổ bóng hoặc viền mờ -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />

    <!-- Viền mờ nhẹ -->
    <stroke
        android:width="1dp"
        android:color="#E0E0E0" /> <!-- Màu xám nhạt -->
</shape>
