<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <!-- ImageView cho ảnh phòng -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/room_image"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/ic_launcher_foreground"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.Image.Rounded"
            android:scaleType="centerCrop" />

        <!-- Layout chứa thông tin phòng -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="8dp"
            android:paddingEnd="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RatingBar
                    android:id="@+id/ratingBarHome"
                    style="@style/Widget.AppCompat.RatingBar.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:isIndicator="false"
                    android:numStars="5"
                    android:progressBackgroundTint="@android:color/darker_gray"
                    android:progressTint="@android:color/holo_orange_light"
                    android:rating="4.5"
                    android:scaleX="1.0"
                    android:scaleY="1.1"
                    android:secondaryProgressTint="@android:color/holo_orange_light"
                    android:stepSize="0.5" />
                <TextView
                    android:id="@+id/ratingText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(115 Reviews)"
                    android:textColor="#FF9800"
                    android:textSize="12sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <!-- Tên phòng -->
            <TextView
                android:id="@+id/room_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Malon Greens"
                android:textStyle="bold"
                android:textSize="16sp" />

            <!-- Địa điểm -->
            <TextView
                android:id="@+id/room_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Mumbai, Maharashtra"
                android:textSize="14sp"
                android:textColor="#666666" />

            <!-- Giá -->
            <TextView
                android:id="@+id/price_room"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="$110/night"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="#000000" />
        </LinearLayout>



    </LinearLayout>
</androidx.cardview.widget.CardView>
