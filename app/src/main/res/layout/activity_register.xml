<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.Register">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="24dp"
        android:background="@android:color/white">

        <!-- App Logo and Name -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/appName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FHOTELL"
                android:textStyle="bold"
                android:textSize="32sp"
                android:textColor="#4C68D7"
                android:layout_marginTop="20dp"
                android:fontFamily="sans-serif-medium" />

            <!-- Login Prompt -->
            <TextView
                android:id="@+id/registerTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Register Now!"
                android:textSize="28sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:textColor="#000000"
                android:fontFamily="sans-serif-medium" />

            <TextView
                android:id="@+id/registerSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enter your information below"
                android:textSize="16sp"
                android:layout_marginTop="4dp"
                android:textColor="#808080" />
        </LinearLayout>

        <EditText
            android:id="@+id/edt_username_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="  Username"
            android:inputType="textEmailAddress"
            android:drawableStart="@drawable/user"
            android:padding="15dp"
            android:background="@drawable/rounded_edittext"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="40dp"/>

        <EditText
            android:id="@+id/edt_email_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="  Email"
            android:inputType="textPassword"
            android:drawableStart="@drawable/baseline_email_24"
            android:padding="15dp"
            android:background="@drawable/rounded_edittext"
            android:layout_marginBottom="20dp" />

        <EditText
            android:id="@+id/edt_password_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="  Password"
            android:inputType="textPassword"
            android:drawableStart="@drawable/baseline_key_24"
            android:padding="15dp"
            android:background="@drawable/rounded_edittext"
            android:layout_marginBottom="20dp"/>

        <EditText
            android:id="@+id/edt_mobile_number_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="  Mobile Number"
            android:inputType="textPassword"
            android:drawableStart="@drawable/phone"
            android:padding="15dp"
            android:background="@drawable/rounded_edittext"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gender"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="18sp"
            />
        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Male"
                android:textColor="#333333"
                android:buttonTint="#52A95E"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Female"
                android:textColor="#333333"
                android:buttonTint="#52A95E"
                />
        </RadioGroup>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_REGISTER"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Register"
            android:background="@drawable/rounded_button_blue"
            android:textColor="#FFFFFF"
            android:padding="12dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="24dp">
            <TextView
                android:id="@+id/noAccountText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Already a member?"
                android:textColor="#808080" />
            <TextView
                android:id="@+id/txt_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Login"
                android:textColor="#4C68D7" />
        </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>